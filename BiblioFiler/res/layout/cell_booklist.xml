<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    android:orientation="horizontal" >

    <jp.sharakova.android.urlimageview.UrlImageView
        android:id="@+id/imageview_booklist_bookimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:contentDescription="bookimage"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="6dp" >

        <TextView
            android:id="@+id/text_booklist_booktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="書籍タイトル"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_booklist_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="著者名"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_booklist_listprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="定価"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_booklist_booktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1)"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>